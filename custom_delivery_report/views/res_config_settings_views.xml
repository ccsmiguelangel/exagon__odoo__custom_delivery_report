<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de configuración en Ajustes > Inventario -->
    <record id="res_config_settings_view_form_inherit_custom_delivery" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.custom.delivery</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='stock']" position="inside">
                <block title="Formato de Albarán">
                    <setting>
                        <field name="use_custom_delivery_format"/>
                        <div class="content-group">
                            <div class="text-muted">
                                Usa formato personalizado con columnas: Producto | Lote/Nº serie | Entregado (con empaquetado)
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
